            </StackLayout>

            <BoxView Color="Silver" HeightRequest="1"/>
            <StackLayout Orientation="Horizontal" BackgroundColor="White">
                <Image  Source="link_icon.png" HeightRequest="20" WidthRequest="20"/>
                <Label Text="Reporte de Alertas" TextColor="Black" VerticalOptions="Center" FontSize="16"/>

            </StackLayout>
            <BoxView Color="Silver" HeightRequest="1"/>
            <StackLayout>

                <Image Source="logovinci.jpg" HeightRequest="50" Margin="0,30"></Image>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>